{
  "manifest_version": 2,
  "name": "On Pace",
  "author": "msavprojects@gmail.com",
  "description": "Extension for blocking unwanted websites",
  "version": "1.1.0",
  "browser_action": {
    "default_title": "Click to show the form"
  },
  "icons": {
    "16": "icons/on-pace-16.png",
    "32": "icons/on-pace-32.png",
    "48": "icons/on-pace-48.png",
    "128": "icons/on-pace-128.png"
  },
  "permissions": [
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "scripting", 
    "storage",
    "tabs",
    "*://*/"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ],
    "persistent": false
  },
  "commands": {
    "trigger_form": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+B"
      },
      "description": "Click or press Ctrl+Q to show the form"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "browser-polyfill.js"
    ]
  }],
  "web_accessible_resources": [
    "blocked.html",
    "options.html", 
    "icons/*.svg"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "options_page": "options.html"
}