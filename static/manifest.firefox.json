{
  "manifest_version": 2,
  "name": "Website Blocker",
  "description": "Extension for blocking unwanted websites",
  "version": "1.0",
  "browser_action": {
    "default_title": "Click to show the form"
  },
  "permissions": [
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "scripting", 
    "storage",
    "tabs",
    "*://*/"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "browser-polyfill.js",
      "options.js",
      "blocked.js"
    ]
  }],
  "commands": {
    "trigger_form": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+B"
      },
      "description": "Show HTML form"
    }
  },
  "web_accessible_resources": [
    "blocked.html",
    "options.html", 
    "icons/*.svg"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "options_page": "options.html"
}